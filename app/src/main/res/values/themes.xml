<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema utama aplikasi -->
    <style name="Theme.FishGuard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Warna utama aplikasi -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder aplikasi -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Warna status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Kustomisasi lainnya -->
        <!-- Anda bisa menambahkan item lainnya jika diperlukan -->
    </style>

    <!-- Tema khusus untuk SplashActivity -->
    <style name="Theme.FishGuard.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Layar penuh tanpa action bar -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/blue</item>
    </style>

    <style name="Theme.FishGuard.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
